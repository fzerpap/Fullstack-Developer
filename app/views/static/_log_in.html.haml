.animated.fadeInDown
  .row.body-home-page
    .col-md-6.body-sign-in-logo
      /.logo
      /  = image_tag('building-avatar.gif', width: 400)
      /  %h1 
      /    =I18n.t(:sistema)
    .col-md-6.body-sign-in
      .ibox-content.content-sign-in
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'm-t'}) do |f|
          .form-group
            = f.text_field :email, placeholder: I18n.t(:user), class:'form-control', required: '', id: 'login-email'
          .form-group
            = f.password_field :password, autocomplete: "off", placeholder: I18n.t(:password), class: 'form-control', required: '', id: 'login-password'
          .form-group
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me, I18n.t(:keep_conect)
          = f.submit I18n.t(:get_in), class: 'btn btn-warning block full-width m-b'
          = link_to new_user_password_path, class: 'small' do
            =I18n.t(:forgot_password)
