.animated.fadeInDown
  .row.body-home-page
    .col-sm-8.image-sign-in
    .col-sm-4.content-sign-in
      .page-header
        .col-sm-6
          %h1
            =I18n.t(:new_user)
          = form_for(@user, url: {controller: :static, action: :create}, html: {class:"form-horizontal m-t-md", id: "form-sign-up"}) do |f|
            .form-group
              = f.text_field :full_name, autofocus: true, placeholder: I18n.t(:full_name), class: 'form-control'
            .form-group
              = f.text_field :email, class: "form-control", placeholder: I18n.t(:email)
            .form-group
              = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: I18n.t(:password)
              %span.help-block.m-b-none
                =I18n.t(:password_rule)
            .form-group
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: I18n.t(:repeat_password)
            .form-group
              = f.submit I18n.t(:send), class: 'btn btn-primary'
              = link_to profile_path, class: 'btn btn-default' do
                %span.glyphicon.glyphicon-list-alt
                =I18n.t(:cancel)