.page-header
  = link_to profile_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    =I18n.t(:back)
  %h1
    =I18n.t(:editing_profile)
= form_for(current_user, url:  profile_update_path, html: { method: :post, class:"form-horizontal m-t-md", id: "form_edit_user"}) do |f|
  = devise_error_messages!
  .form-group
    = f.label :name, I18n.t(:full_name), class: 'col-sm-2 control-label'
    .col-sm-2
      = f.text_field :full_name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :email, I18n.t(:email), class: 'col-sm-2 control-label'
    .col-sm-2
      = f.email_field :email, class: 'form-control'
  .form-group
    = f.label :avatar_image, I18n.t(:avatar), class: 'col-sm-2 control-label'
    .col-sm-2
      = render 'users/shared/file_input', f: f, campo: :avatar_image, modelo_campo: current_user.avatar_image
  .form-group
    .col-sm-2.col-sm-offset-2
      = f.submit I18n.t(:save), class: 'btn btn-primary'
