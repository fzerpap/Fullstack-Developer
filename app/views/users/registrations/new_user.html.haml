.page-header
  = link_to users_index_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    =I18n.t(:back)
  %h1
    =I18n.t(:new_user)
= form_for(@user, as: resource_name, url: {action: :create_user}, html: {class:"form-horizontal m-t-md", id: "form_registro_user"}) do |f|
  = devise_error_messages!
  .form-group
    = f.label :full_name, I18n.t(:full_name), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :full_name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :email, I18n.t(:email), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.email_field :email, class: "form-control"
  .form-group
    = f.label :email_confirmation, I18n.t(:email_confirm), class: 'col-sm-2 control-label'
    .col-sm-4
      = email_field_tag :email_confirmation, nil,  class: "form-control"
  .form-group
    = f.label :password, I18n.t(:password), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password, autocomplete: "off", class: 'form-control'
      %span.help-block.m-b-none
        =I18n.t(:password_rule)
  .form-group
    = f.label :password_confirmation,I18n.t(:password_confirm), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .form-group
    = f.label I18n.t(:role), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.select(:role, User.valid_roles.map { |x| [x.humanize.titleize, x]}, {include_blank: true}, class: 'form-control')
  .form-group
    .col-sm-2
      = f.submit I18n.t(:save), class: 'btn btn-primary'
