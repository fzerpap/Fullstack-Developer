.page-header
  = link_to users_index_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    =I18n.t(:back)
  %h1
    =I18n.t(:new_store_user)
= form_for(@user, as: resource_name, url: {action: :create}, html: {class:"form-horizontal m-t-md", id: "form_registro_user"}) do |f|
  = devise_error_messages!
  .form-group
    = f.label I18n.t(:store), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :store, value: current_user.store.name, class: 'form-control', readonly: true
      = f.hidden_field :store_id, value: current_user.store_id
  .form-group
    = f.label :name, I18n.t(:name), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :username, I18n.t(:user_name), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :username, autofocus: false, class: 'form-control'
  .form-group
    = f.label :password, I18n.t(:password), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password, autocomplete: "off", class: 'form-control'
      %span.help-block.m-b-none
        =I18n.t(:password_rule)
  .form-group
    = f.label :password_confirmation,I18n.t(:password_confirm), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .form-group
    = f.label :email, I18n.t(:email), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.email_field :email, class: "form-control"
  .form-group
    = f.label :email_confirmation, I18n.t(:email_confirm), class: 'col-sm-2 control-label'
    .col-sm-4
      = email_field_tag :email_confirmation, nil,  class: "form-control"
  .form-group
    = f.label :cellphone, I18n.t(:phone), class: 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :cellphone, autofocus: false, class: 'form-control'
  %br
  .form-group
    = f.label :role, I18n.t(:roles), class: 'col-sm-2 control-label'
    .col-sm-4
      %table
        %tbody
        = f.collection_radio_buttons :role_id, @roles, :id, :name do |r|
          %tr
            %td
              = r.label
              &nbsp;
            %td= r.radio_button
  .form-group
    .col-sm-2
      = f.submit I18n.t(:save), class: 'btn btn-primary'
